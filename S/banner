#!/bin/sh -eu

. "$(dirname "$0")/COMMON"

require cmd:tput

print_banner() ### ( file )
{
	banner="$dir/BANNERS/$1"
	[ -f "$banner" ] || return 1
	if [ "$COLUMNS" -ge "$(head -1 "$banner")" ]
	then tail +3 "$banner"
	else tail +2 "$banner" | head -1 ; repeat "$COLUMNS" 'â”€'
	fi
}

get_variant()
{
variant="$(. "$dir/distinfo" ID)"
}

## main

## variant override
variant="${1-}"
[ "$variant" ] || get_variant

print_banner "$variant" || print_banner DEFAULT
